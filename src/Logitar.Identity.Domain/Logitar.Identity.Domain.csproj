<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <WarningsAsErrors>Nullable</WarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FluentValidation" Version="11.8.0" />
    <PackageReference Include="libphonenumber-csharp" Version="8.13.23" />
    <PackageReference Include="Logitar.EventSourcing" Version="4.0.1" />
    <PackageReference Include="Logitar.Security" Version="5.2.1" />
    <PackageReference Include="NodaTime" Version="3.1.9" />
  </ItemGroup>
  
  <ItemGroup>
    <InternalsVisibleTo Include="Logitar.Identity.Domain.UnitTests" />
  </ItemGroup>
  
  <ItemGroup>
    <Using Include="System.Collections.Immutable" />
    <Using Include="System.Globalization" />
    <Using Include="System.Text" />
  </ItemGroup>

</Project>
